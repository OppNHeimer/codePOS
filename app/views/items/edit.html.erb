<!-- form to edit menu item -->
<section class='heading_section'>
  <!-- back_button -->
  <%= link_to '<=', category_items_path(@category), class: 'back_button' %>
  <!-- edit menu item heading -->
  <h1>edit: <%= @item.name %></div></h1>
</section>

<!-- displays error if form is filled incorrectly -->
<% @item.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<section class='form'>
  <!-- form to edit item -->
  <%= form_for [@category, @item] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :code %>
    <%= f.text_field :code %>

    <%= f.submit "Update" %>
  <% end %>
  <!-- button to delete menu item -->
  <%= button_to "Delete", [@category, @item], method: :delete, data: {confirm: "Are you sure?"} %>
</section>
