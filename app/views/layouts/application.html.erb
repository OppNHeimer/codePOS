<!DOCTYPE html>
<html>
  <head>
    <title>Project2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <!-- link to menu home -->
      <a href='<%= categories_path %>'>
        <div class='nav_button'><span>Menu</span></div>
      </a>

      <!-- link to manage foods -->
      <a href='<%= ingredients_path %>'>
        <div class='nav_button'><span>Ingredients</span></div>
      </a>
    </nav>

    <!-- display flash message -->
    <% flash.each do |type, message| %>
      <p><%= type %>: <%= message %></p>
    <% end %>

    <section id='yield'><%= yield %></section>

    <section class='order'>
      <h3>Order</h3>
        <ol>
          <% $order.each do |order| %>
            <li><%= order[:item] %></li>
            &emsp;<%= order[:modification] %>
            <% if order[:message] %>
              <br>&emsp; MESSAGE: <%= order[:message] %>
            <% end %>
          <% end %>
        </ol>
    </section>

  </body>
</html>
