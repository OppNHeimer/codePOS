<h2>edit <%= @category.name %></h2>
<!-- error if form is filled out incorrectly -->
<% @category.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>
<!-- form to edit ingredient -->
<%= form_for @category do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit "update" %></li>
<% end %>
<!-- button to delete ingredient -->
<%= button_to "Delete", @category, method: :delete, data: {confirm: "Are you sure?"} %>
